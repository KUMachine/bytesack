datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  username  String
  email     String   @unique
  avatar    String   @default("default-avatar.svg")
  cover     String   @default("default-cover.svg")
  role      UserRole @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  account   Account  @relation(fields: [accountId], references: [id])
  accountId Int
}

model Account {
  id        Int      @id @default(autoincrement())
  User      User?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  SUPERUSER
  ADMIN
  MEMBER
}

model Post {
  id          Int           @id @default(autoincrement())
  slug        String        @unique
  title       String
  description String        @default("")
  language    PostLanguage  @default(EN)
  image       String
  tags        String[]
  author      User          @relation(fields: [userId], references: [id])
  authorImage String
  readTime    Int?          @default(5)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now()) @updatedAt
  published   Boolean       @default(false)
  body        PostSection[]
  userId      Int
}

model PostSection {
  id       Int             @id @default(autoincrement())
  seq      Int
  type     PostSectionType
  text     String?
  language String?
  src      String?
  post     Post            @relation(fields: [postId], references: [id])
  postId   Int
}

enum PostSectionType {
  PARAGRAPH
  CODE
  IMAGE
}

enum PostLanguage {
  EN
  KU
}
